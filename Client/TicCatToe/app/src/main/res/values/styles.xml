<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@android:color/darker_gray</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">@drawable/waiting_title_design</item>
        <item name="android:layoutDirection">ltr</item>
    </style>

    <style name="ToolbarText" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textSize">50sp</item>
        <item name="android:gravity">left</item>
        <item name="android:fontFamily">@font/allan</item>
    </style>

    <style name="ButtonStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">100dp</item>
        <item name="android:textSize">60sp</item>
        <item name="android:src">@drawable/tct_empty</item>
        <item name="android:layout_margin">10dp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_height">90dp</item>
        <item name="android:layout_gravity">center_horizontal|center_vertical</item>
    </style>

</resources>
